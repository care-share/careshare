<div>
 <label>Name:</label>
 {{input type="text" value=filterText placeholder="Enter patient name"}}
 <!--TODO: use 'name' to search for patient info as an initial test-->
</div>
<br>
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
            <h3 class="panel-title">Patient Search</h3>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>  
              <th class="fullName">
                Full Name
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="birthDate">
                Birth Date
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th>
            </tr>
          </thead>
          
             <tbody>
               {{#each patient in filteredContent}}
                <tr class="">
                  <td class="fullName">{{patient.fullName}}</td>
                  <td class="birthDate">{{patient.birthDate}}</td>
                </tr>
                  {{else}}
            Didn't find any patients.
               {{/each}}
            </tbody>
          </table>
        </div>
      </div>
