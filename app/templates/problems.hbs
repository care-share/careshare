<div class="row">
    <div class="col-xs-8">
        <h3 class="fhir-column-header"><span class="resource-type-letter">P</span>roblems</h3>
    </div>
    <div class="col-xs-4" style="padding-top:10px;padding-right:0px;padding-left:0px">
        <button class="nobackground f-right" {{action 'createRecord' 'Condition'}}>
            <span class="glyphicon glyphicon-plus"></span> <strong>Add</strong>
        </button>
    </div>
</div>
<div id="problems-column" class="panel-group fhir-column" style="{{careplan.splitStyle}}">
    {{#each model as |problem|}}
        {{resource-condition root=problem careplan=careplan}}
    {{else}}
        No Problems<br/>
    {{/each}}
</div>
