<h3 class="fhir-column-header">Problems</h3>
<div id="problems-column" class="panel-group fhir-column">
    {{#each model as |problem|}}
        {{#draggable-object-target action="createRelation" ontoObject=problem}}
            {{#draggable-object content=problem}}
                <div {{action "hoverOn" problem on="mouseEnter"}} {{action "hoverOff" problem on="mouseLeave"}}>
                    {{#fhir-element root=problem type='Condition' as |section|}}
                        {{#if (eq section "expanded")}}
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-xs-12 fhir-form-item">
                                        <div class="col-xs-12 col-lg-6">
                                            {{#codeable-concept parent=problem name='code'}}
                                                {{fhir-edit attribute=problem.code.text }}
                                            {{/codeable-concept}}
                                        </div>
                                        <div class="col-xs-12 col-lg-6">
                                            {{fhir-choice attribute=problem.clinicalStatus choices='active,relapse,remission,resolved'}}
                                        </div>
                                    </div>
                                </div>
                                <div class=" col-xs-12 fhir-form-item">
                                    <label class="col-sm-5 control-label" for="severity"> Severity: </label>

                                    <div id="severity" class="col-xs-12 col-lg-7">
                                        {{#codeable-concept parent=problem name='severity'}}
                                            {{fhir-choice attribute=problem.severity.text choices='Unspecified,Low,Moderate,Important,Critical'}}
                                        {{/codeable-concept}}
                                    </div>
                                </div>
                                <div class="col-xs-12 fhir-form-item">
                                    <label class="col-sm-5 control-label" for="category">Category:</label>

                                    <div id="category" class="col-xs-12 col-lg-7">
                                        {{#codeable-concept parent=problem name='category'}}
                                            {{fhir-choice attribute=problem.category.text choices='Complaint,Symptom,Finding,Diagnosis'}}
                                        {{/codeable-concept}}
                                    </div>
                                </div>
                                <div>
                                    <div class="col-xs-12 fhir-form-item">
                                        <label class="col-sm-5 control-label" for="onset">Onset:</label>

                                        <div id="onset" class="col-xs-12 col-lg-7">
                                            {{fhir-datetime name='onsetDateTime' attribute=problem.onsetDateTime showTime=true}}
                                        </div>
                                    </div>
                                    <div class="col-xs-12 fhir-form-item">
                                        <label class="col-sm-5 control-label" for="abatement">Abatement:</label>

                                        <div id="abatement" class="col-xs-12 col-lg-7">
                                            {{fhir-datetime name='abatementDateTime' attribute=problem.abatementDateTime showTime=true}}
                                        </div>
                                    </div>
                                </div>
                                <select id="dropdown{{patient.id}}" class="form-control">
                                    <option disabled selected> Body Sites</option>
                                </select>

                                {{!-- {{related-list parent=problem relation='rlGoals' display='description' label="Goals" lastExpanded=controller.lastExpanded}} --}}
                                {{related-list parent=problem relation='rlGoals' display='description' label="Goals"}}
                                {{related-list parent=problem relation='rlProcedureRequests' display='code.text' label="Interventions"}}
                                {{related-list parent=problem relation='rlMedicationOrders' display='medicationReference.medication.code.text' label="Medications"}}
                                <div style="clear:left;">
                                    Notes:
                                </div>
                            </div>
                        {{else}}
                        {{!TODO: Wrap this with severity border-left}}
                            {{problem.code.text}} - ({{problem.clinicalStatus}})

                        {{/if}}
                    {{/fhir-element}}
                </div>
            {{/draggable-object}}
        {{/draggable-object-target}}
    {{else}}
        No Problems<br/>
    {{/each}}
</div>
<div>
    <button class="nobackground" {{action 'createRecord' 'Condition'}}>
        <span class="glyphicon glyphicon-plus"></span> <strong>Add Problem</strong>
    </button>
</div>

