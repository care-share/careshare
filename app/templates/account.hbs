  {{#if session.secure.isAdmin}}
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
          <h3 class="panel-title">Account Requests Awaiting Action</h3>
        </div>
     
        <table class="table table-hover">
          <thead>
            <tr>  
              <th class="fullName">
                Full Name
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="email">
                Email
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="role">
                Roles
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th>
              <th class="origin">
                Origin
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="approval">
                Approve
              </th>
            </tr>
          </thead>
          <tbody>
          {{#each model as |user|}}
            <tr> <td>{{user.name_last}}, {{user.name_first}} </td>
              <td> {{user.email}} </td>
              <td>
                <div class="btn-group btn-group-xs">
                {{#each user.allRoles as |role|}}
                  <button {{action 'toggleRole' user.email role.key role.value}} class="btn {{if role.value 'btn-success' 'btn-danger'}}">
                    {{role.key}}
                  </button>
                {{/each}}
                </div>
              </td>
              <td> {{user.origin}} </td>
              <td>
                <span {{action 'approve' user.email}} class="icon btn-icon ion-checkmark"></span>
                <span {{action 'deny' user.email}} class="icon btn-icon ion-close"></span>
              </td>
            </tr>
          {{else}}
            <br />
            <p>Didn't find any accounts.</p>
          {{/each}}
          </tbody>
        </table>
    </div></div>
          
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
          <h3 class="panel-title">Approved Users</h3>
        </div>
     
        <table class="table table-hover">
          <thead>
            <tr>  
              <th class="fullName">
                Full Name
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="email">
                Email
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="role">
                Roles
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th>
              <th class="origin">
                Origin
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="change">
                Remove
              </th>
            </tr>
          </thead>
          <tbody>
          {{#each approved as |user|}}
            <tr>
              <td>{{user.name_last}}, {{user.name_first}} </td>
              <td> {{user.email}} </td>
              <td>
                <div class="btn-group btn-group-xs">
                {{#each user.allRoles as |role|}}
                  <button {{action 'toggleRole' user.email role.key role.value}} class="btn {{if role.value 'btn-success' 'btn-danger'}}">
                    {{role.key}}
                  </button>
                {{/each}}
                </div>
              </td>
              <td> {{user.origin}} </td>
              <td>
              {{#if (not-eq user.email session.secure.email)}}
                <span {{action 'deny' user.email}} class="icon btn-icon ion-close"></span>
              {{else}}
                Current User
              {{/if}}
              </td>
            </tr>
          {{else}}
            Didn't find any approved users.
          {{/each}}
          </tbody>
        </table>
    </div></div>
  {{else}}
    Sorry, this page is only accessible by administrators.
  {{/if}}
