{{#if isAdmin}}
    <div class="col-sm-12">
      <div class="panel panel-dlefault">
        <div class="panel-heading">
            <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
            <h3 class="panel-title">Account Requests Awaiting Action ({{filteredContent.length}} found)</h3>
        </div>
     
        <table class="table table-hover">
          <thead>
            <tr>  
              <th class="fullName">
                Full Name
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="email">
                Email
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="role">
                Role
                <div class="order pull-left">
                  <a class="asc">&uarr;</a>
                  <a class="desc">&darr;</a>
                </div>
              </th> 
              <th class="approval"></th>
            </tr>
          </thead>
             <tbody>
             {{#each model as |user|}}
                <tr> <td>{{user.name_last}}, {{user.name_first}} </td>
                <td> {{user.email}} </td>
                <td> {{user.role}} </td>
                <td>
                  <button>Approve</button>
                  <button>Deny</button>
                 </td>
                </tr>  
                  {{else}}
            Didn't find any accounts.
               {{/each}}

            </tbody>
          </table>
          </div></div>
 {{else}}
 Sorry, this page is only accessible by administrators.  
 {{/if}}
