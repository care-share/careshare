
{{#if session.isAuthenticated}}
<!-- Sidebar -->
<aside class="side-left ng-scope" ng-controller="SmartSearchCtrl">
  <!-- Sidebar Header-->
  <div class="side-header">
    <h1 id="brand" class="brand">
      <a href="/">
        <img alt="Brand" src="/images/brand.png"> 
        <strong>rural</strong>health
      </a>
    </h1>
    <form id="smart-search" class="side-form hide ng-pristine ng-valid" role="form">
      <input type="text" ng-model="search" class="form-control ng-pristine ng-valid" data-target=".side-wrapper" placeholder="Smart Finder">
    </form>
  </div>

  <!-- Sidebar Body-->
  <div class="side-body">
    <nav class="side-nav">
      <ul>
        <li class="side-nav-item active">
          <a href="/dashboard"><i class="nav-item-icon icon ion-social-rss-outline"></i>Dashboard</a>
        </li>
        <li class="side-nav-item ">
          <a href="/patients">
              <span class="badge">(patient count)</span>
              <i class="nav-item-icon icon ion-ios-person-outline"></i> Patients </a>
              </li>
                <li class="side-nav-item ">
                  <a href="/consults">
                    <i class="nav-item-icon icon ion-compose"></i> Drafts </a>
                </li>
                <li class="side-nav-item ">
                  <a href="/reviewed">
                    <i class="nav-item-icon icon ion-clipboard"></i> Consults </a>
                </li>
                <li class="side-nav-item">
                  <a href="/referrals">
                    <i class="nav-item-icon icon ion-paper-airplane"></i> Referrals </a>
                </li>
                <!-- /tables -->
            <li class="side-nav-item ">
              <a href="/approved">
                <i class="nav-item-icon icon ion-map"></i> Ready for Assignment </a>
            </li>
            <!-- /tables -->
        <li class="side-nav-item ">
          <a href="/assigned">
            <i class="nav-item-icon icon ion-medkit"></i> Patients Receiving Care </a>
        </li>
        <!-- /tables -->
        <li class="side-nav-item ">
          <a href="/reviewable">
            <i class="nav-item-icon icon ion-checkmark-round"></i> Ready for Certification </a>
        </li>
        
     {{#if isAdmin}}
            <li class="side-nav-item ">
          <a href="/account">
            <i class="nav-item-icon icon ion-settings"></i> Review Account Requests</a>
        </li>
     {{/if}}   
      </ul>
    </nav>

  </div>
</aside>

<section id="content" class="content">
  <header class="content-header">
    <!-- Navbar Right Content -->
    <div class="header-actions pull-right">
      <div class="btn-group">
        <a id="notif-alerts" class="btn btn-icon hide-sm dropdown-toggle" data-toggle="dropdown" role="button">
           <i class="icon ion-alert-circled"></i>
        </a>
      </div>
      <div class="btn-group">
        <a id="users-setting" class="btn btn-icon data-toggle" data-toggle="dropdown" role="button">
          <i class="icon ion-gear-b"></i>
        </a>
      </div>
    </div>

    <!-- Navbar Left/Center Content -->
    <div class="header-actions pull-left">
      <button id="toggle-content" class="btn btn-icon" type="button"><i class="icon ion-navicon-round"></i></button>
      <button id="toggle-search" class="btn btn-icon" type="button"><i class="icon ion-search"></i></button>
    </div>
    <h1 class="content-title">{{header-format target.url}}</h1>
  </header>

  <!-- Main Application Window -->
  <div class="content-spliter">
    <section id="content-main" class="content-main">
      <div class="content-app fixed-header">
      
        <!-- Application Header -->
        <div class="app-header">
          <h3 class="app-title pull-left hidden-xs"/>
          <ol class="breadcrumb bg-none pull-left hide-xs">
            <li>Welcome, {{session.secure.name_first}}!</li>      
          </ol>          
            
          <div class="pull-right">
              <div class="pull-right">
              <a class="btn btn-sm btn-default btn-extend be-left" href="/consults/new">
                  Create ???????<i class="ion ion-clipboard"></i>
              </a>
              <button aria-hidden="true" {{action 'invalidate'}} class="btn btn-sm btn-default" type="submit">Sign Out</button>
              </div>
          </div>
        </div>

        <!-- Application Body -->
        <div class="app-body">
          <div class="col-sm-12">
            {{outlet}}
          </div>
        </div>       
      </div>
    </section>
  </div>
</section>

{{else}}
<section class="sign-wrapper signin transition-layout active" style="background-image: url('/images/bg-signin.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="sign-brand">
              <div class="sign-brand-logo">
                <img alt="Brand md" src="/images/brand-md.png" />
              </div>
              <h1 class="sign-brand-name">Rural health</h1>
            </div>
            <!-- /sign-brand -->
            <div class="sign-container">
            <div class="alert alert-error alert-icon"> Your session expired. Please sign in again to continue. </div>
            {{#if lastLoginFailed}}
              <div class="alert alert-danger">
              <strong>Invalid username or password!</strong> Please try again or contact your system administrator.
              </div>
            {{/if}}

          <!--Switch between sign in and account request forms.-->
          {{#if isShowingForm}}
                    <form accept-charset="UTF-8" action="/users/sign_in" class="new_user" id="new_user" method="post" style="" {{action 'validate' on='submit'}}><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="3M1D+Jmw7r7dNjEE8+U4IFH6SnPf6C8x4NEBAg2GZK8=" /></div>
              <h4 class="text-center">VA User Sign In</h4>
              <div class="form-group">
              {{input value=identification placeholder='Enter Login' class='form-control'}}
                <!--<input autofocus="autofocus" class="form-control" id="user_email" name="user[email]" placeholder="Email" type="email" value="" />-->
              </div>

              <div class="form-group">
              {{input value=password placeholder='Enter Password' class='form-control' type='password'}}
                <!--<input autocomplete="off" class="form-control" id="user_password" name="user[password]" placeholder="Password" type="password" />-->
              </div>
              <input class="btn btn-lg btn-block btn-default" name="commit" type="submit" value="Sign in" />
              <hr>
              <a class="btn btn-lg btn-block btn-default" {{action "toggleLoginForm"}}> Show Account Request Form</a>
                <hr>
                <h4 class="text-center">Home Health Agency Sign In</h4>
                <a class="btn btn-primary btn-lg btn-block" href="https://localhost:3000/login-openid"> Generic HHS</a>
               </form>
{{else}}
            {{#if accountRequestSucceeded}}
              <div class="alert alert-success">
              <strong>Account request succeeded!</strong> You will be notified by email when your account has been approved.
              </div>            
            {{/if}}
            {{#if accountRequestFailed}}
              <div class="alert alert-danger">
              <strong>Account request failed!</strong> Please try again or contact your system administrator.
              </div>            
            {{/if}}
                    <form accept-charset="UTF-8" action="/users/account_request" class="new_user" id="new_user" method="post" style="" {{action 'accountRequest' on='submit'}}><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>
              <h4 class="text-center">Account Request</h4>
              <div class="form-group">
              {{input value=first placeholder='Enter First Name' class='form-control'}}
              </div>
              <div class="form-group">
              {{input value=last placeholder='Enter Last Name' class='form-control'}}
              </div>
              <div class="form-group">
              {{input value=email placeholder='Enter Email' class='form-control' type='email'}}
              </div>
              <div class="form-group">
              {{input value=pass placeholder='Enter Password' class='form-control' type='password'}}
              </div>
              <input class="btn btn-lg btn-block btn-default" name="commit" type="submit" value="Submit" />
              <hr>
              <a class="btn btn-lg btn-block btn-default" {{action "toggleLoginForm"}}> Show Login Page</a>
               </form>
{{/if}}

        </div>
        <!-- /sign-container -->
            </div>
        </div>
    </div>
 </section>  
{{/if}}
