{{#em-modal configName="bs" id=name}}
    {{#em-modal-body}}
        Short Code: <b>{{child.repeat.displayCode}}</b><br><br>
        Frequency: {{fhir-edit parent=child.repeat name='frequency' isNumber='integer'}} to
                   {{fhir-edit parent=child.repeat name='frequencyMax' isNumber='integer'}}<br>
        Period: {{fhir-edit parent=child.repeat name='period' isNumber='decimal'}} to
                {{fhir-edit parent=child.repeat name='periodMax' isNumber='decimal'}}
                {{fhir-choice parent=child.repeat name='periodUnits' choices='s,min,h,d,wk,mo,a'}}<br>
        Duration: {{fhir-edit parent=child.repeat name='duration' isNumber='decimal'}} to
                {{fhir-edit parent=child.repeat name='durationMax' isNumber='decimal'}}
                {{fhir-choice parent=child.repeat name='durationUnits' choices='s,min,h,d,wk,mo,a'}}<br>
        Repeat: {{fhir-edit parent=child.repeat name='count' isNumber='integer'}} times<br><br>
        Start date: {{fhir-datetime parent=child name='event' inline=true}}
        {{#em-modal-toggler class="btn btn-default"}}Close{{/em-modal-toggler}}
    {{/em-modal-body}}
{{/em-modal}}
{{em-modal-toggler modal-id=name class="glyphicon glyphicon-time"}}
