{{#if inline}}
    {{#if showTime}}
        {{#bs-datetimepicker date=datePassthrough showToday=false pickTime=showTime format='L LT' forceDateOutput=true}}
            {{input class='form-control' value=datePassthrough autofocus="autofocus"}}
            {{!--{{#if (gt calculatedPatch.length 0)}}
                <div style='background-color:#dddddd'>
                    {{{calculatedPatch}}}
                    <button class='glyphicon glyphicon-remove' {{action 'cancel'}}/>
                </div>
            {{/if}}--}}
        {{/bs-datetimepicker}}
    {{else}}
        {{#bs-datetimepicker date=datePassthrough showToday=false pickTime=showTime format='L' forceDateOutput=true}}
            {{input class='form-control' value=datePassthrough autofocus="autofocus"}}
              {{!--{{#if (gt calculatedPatch.length 0)}}
                <div style='background-color:#dddddd'>
                    {{{calculatedPatch}}}
                    <button class='glyphicon glyphicon-remove' {{action 'cancel'}}/>
                </div>
            {{/if}}--}}
        {{/bs-datetimepicker}}
    {{/if}}
{{else}}
    {{#em-modal configName="bs" id=nameID}}
        {{#em-modal-body}}
            {{#if showTime}}
                {{#bs-datetimepicker date=datePassthrough showToday=false pickTime=showTime format='L LT' noIcon=true forceDateOutput=true sideBySide=true}}
                    {{input class='form-control' value=datePassthrough autofocus="autofocus"}}
                {{/bs-datetimepicker}}
            {{else}}
                {{#bs-datetimepicker date=datePassthrough showToday=false pickTime=showTime format='L' noIcon=true forceDateOutput=true sideBySide=true}}
                    {{input class='form-control' value=datePassthrough autofocus="autofocus"}}
                {{/bs-datetimepicker}}
            {{/if}}
            {{#em-modal-toggler class="btn btn-default"}}Close{{/em-modal-toggler}}
        {{/em-modal-body}}
    {{/em-modal}}
    {{!--{{#if (gt calculatedPatch.length 0)}}
        <div style='background-color:#dddddd'>
            {{{calculatedPatch}}}
            <button class='glyphicon glyphicon-remove' {{action 'cancel'}}/>
        </div>
    {{else}}--}}
        {{datePassthrough}}
    {{!--{{/if}}--}}
    {{em-modal-toggler modal-id=nameID class="glyphicon glyphicon-calendar"}}
{{/if}}
