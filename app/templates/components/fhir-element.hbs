
<div class="panel panel-info" {{action "toggleHover" on="mouseEnter"}}  >
    <div {{action "toggleHover" on="mouseLeave"}}>

       	

		{{#if expanded}}
			{{yield "expanded"}}
			<div class="glyphicon glyphicon-trash" {{action 'removeItem' element}}></div>
			<div style="float:right;" {{action 'toggleExpanded'}}> Less </div>
		{{else}}
			{{yield "contracted"}}
		{{/if}}

		{{#if currentHover}}
			{{#if expanded}}
				
			{{else}}
				<div style="float:right;" {{action 'toggleExpanded'}}> ... </div>
			{{/if}}			
		{{/if}}
	</div>
</div>

