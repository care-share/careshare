{{#if root}}
	<div class="panel panel-info" 
		style="background-color: rgb(201,222,242);border-color: black;padding-left:1em;padding-right:1em">
		{{#if expanded}}
			<button class="glyphicon glyphicon-chevron-up" {{action 'toggleExpanded'}}/>
		{{else}}
			<button class="glyphicon glyphicon-chevron-down" {{action 'toggleExpanded'}}/>
		{{/if}}
		
		<button class="glyphicon glyphicon-floppy-save" {{action 'saveRecord'}}/>
		<button class="glyphicon glyphicon-trash" {{action 'deleteRecord'}}/><br>	
		
		{{#if expanded}}
			{{yield "expanded"}}
		{{else}}
			{{yield "contracted"}}
		{{/if}}
	</div>
{{else}}
	<div class='well well-sm'>
		{{#if expanded}}
			<button class="glyphicon glyphicon-chevron-up" {{action 'toggleExpanded'}}/>
		{{else}}
			<button class="glyphicon glyphicon-chevron-down" {{action 'toggleExpanded'}}/>
		{{/if}}
		
		{{#if expanded}}
			{{yield "expanded"}}
		{{else}}
			{{yield "contracted"}}
		{{/if}}
	</div>
{{/if}}
