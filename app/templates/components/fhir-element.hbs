<div>
    <div class="panel panel-info"

        {{action "hoverOn" on="mouseEnter"}}
        {{action "hoverOff" on="mouseLeave"}}
        {{action 'expand' on="doubleClick"}}
         style=" {{if currentHover 'border-color:#009e0f;'}}
             {{if root.highlight 'border-color:#009e0f;border-style: dashed;'}} max-width: 100%; overflow-x: hidden;">
        {{#if (or expanded (and root root.isExpanded))}}
            {{yield "expanded"}}
            {{#if (and root (not isDeleteNomination))}}
                <div style="float:left;">
                    <button class="glyphicon glyphicon-floppy-save" {{action 'saveRecord'}}/>
                    <button class="glyphicon glyphicon-trash" {{action 'deleteRecord'}}/>
                    {{#if (not root.isNewRecord)}}
                        <button class="glyphicon glyphicon-repeat" {{action 'undoRecord'}}/>
                    {{/if}}
                </div>
            {{/if}}
            <div style="float:right;" {{action 'toggleExpanded'}}> Less</div>
        {{else}}
            {{yield "contracted"}}
        {{/if}}
        {{#if currentHover}}
            {{#unless expanded}}
                <div style="float:right;" {{action 'toggleExpanded'}}> ...</div>
            {{/unless}}
        {{/if}}

        {{#if isDeleteNomination}}
            <div class="deleted-overlay"></div>
        {{/if}}

    </div>
    <div class="careplan-notification">
    {{#if isCreateNomination}}
        <span class="careplan-notification-badge"> New</span>
    {{/if}}
    {{#if isChangeNomination}}
        <span class="careplan-notification-badge"> Change</span>
    {{/if}}
    {{#if hasNewAnnotations}}
        <span class="icon-comment"> {{unreadAnnotationsCount}}</span>
    {{/if}}
    </div>
</div>
{{#if isDeleteNomination}}
    <button {{action 'acceptDeletion'}}>Sign</button>
    <button {{action 'rejectDeletion'}}>Reject</button>
    <button {{action 'clarify'}}>Clarify</button>
{{/if}}
