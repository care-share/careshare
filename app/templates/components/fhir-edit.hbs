{{#if (eq isNumber 'integer')}}
    {{fhir-integer value=passthrough autofocus="autofocus" size="5" class="form-control" type="number" min="0" max="999" step="1"}}
{{else if (eq isNumber 'decimal')}}
    {{fhir-decimal value=passthrough autofocus="autofocus" size="5" class="form-control" type="number" min="0.0" max="999.9" step="0.1"}}
{{else}}
    {{textarea value=passthrough autofocus="autofocus" size="5" class="form-control" autoresize=true}}
{{/if}}
{{!--
{{#if (gt calculatedPatch.length 0)}}
    <div style='background-color:#dddddd'>
	    {{{calculatedPatch}}}
		<button class='glyphicon glyphicon-remove' {{action 'cancel'}}/>
	</div>
{{/if}}
--}}
