{{#if (eq isNumber 'integer')}}
    {{fhir-integer value=diffAttribute autofocus="autofocus" size="5" class="form-control" type="number" min="0" max="999"}}
{{else if (eq isNumber 'decimal')}}
    {{fhir-decimal value=diffAttribute autofocus="autofocus" size="5" class="form-control" type="number" min="0.0" max="999.9" step="0.1"}}
{{else}}
    {{input value=diffAttribute autofocus="autofocus" size="5" class="form-control"}}
{{/if}}
{{#if (gt calculatedPatch.length 0)}} 
    <div style='background-color:#dddddd'>
	    {{{calculatedPatch}}}
		<button class='glyphicon glyphicon-remove' {{action 'cancel'}}/>
	</div> 
{{/if}}