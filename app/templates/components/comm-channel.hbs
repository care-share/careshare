<br>{{#em-modal-toggler modal-id=nameID class="btn btn-primary" style="width:100%"}}
   <span class="badge">{{resource.comms.unreadCount}}</span> Annotations <div class="glyphicon glyphicon-comment"/>
{{/em-modal-toggler}}
{{#em-modal configName="bs" id=nameID}}
    {{#em-modal-body}}
      <div class="page-header">
        <h3>Annotations <div class="glyphicon glyphicon-comment"/></h3>
      </div>
      {{#each resource.comms as |message|}}
          <div class="">
            <div class="">
               {{#if (or message.isMe (not message.src_user_id))}}
                  You
               {{else}}
                  {{message.src_user_name_first}}
               {{/if}}
              <span class="annotation-timestamp">
                  {{message.timestamp_formatted}}
              </span>
            </div>
            <div class="annotation-content" style="word-wrap: break-word;">
              {{message.content}}
              {{!Delete should only be available to user who creates it}}
              {{#if message.isMe}}
              <button {{action 'destroyMessage' message target='view'}} style="color:red; float: right" class="glyphicon glyphicon-remove nobackground">
              </button>
              {{/if}}
            </div>
          </div>
      {{/each}}
        <br>{{textarea action="createMessage" value=textAreaValue aria-controls="existing-user-table" placeholder="Add annotation" autofocus="autofocus"
          autoresize=true}}
        {{#em-modal-toggler class="btn btn-default"}}Close{{/em-modal-toggler}}
    {{/em-modal-body}}
{{/em-modal}}

{{#each resource.comms as |message|}}
    {{#if (not message.hasSeen)}}
      <div class="">
        <div class="">
           {{#if (or message.isMe (not message.src_user_id))}}
              You
           {{else}}
              {{message.src_user_name_first}}
           {{/if}}
          <span class="annotation-timestamp">
              {{message.timestamp_formatted}}
          </span>
        </div>
        <div class="annotation-content" style="word-wrap: break-word;">
          {{message.content}}
          {{!Delete should only be available to user who creates it}}
          {{#if message.isMe}}
          <button {{action 'destroyMessage' message target='view'}} style="color:red; float: right" class="glyphicon glyphicon-remove nobackground">
          </button>
          {{/if}}
        </div>
      </div>
    {{/if}}
{{/each}}
<br>{{textarea action="createMessage" value=textAreaValue aria-controls="existing-user-table" placeholder="Add annotation" autofocus="autofocus"
  autoresize=true}}
