<button class="btn btn-primary" type="button">
  Unread <span class="badge">{{resource.unreadCount}}</span>
</button>
{{input action="createMessage" aria-controls="existing-user-table" placeholder="Search"}}
{{#each resource.comms as |message|}}
    <div class="panel panel-default">
      <div class="panel-body">
        {{#if (or message.isMe (not message.src_user_id))}} You {{else}} User ID {{message.src_user_id}} {{/if}}
         said : {{message.content}}
      </div>
      {{message.timestamp_formatted}}
      {{#if message.isMe}}<button {{action 'destroyMessage' message target='view'}}>Remove</button>{{/if}}
    </div>
{{/each}}
